# http://editorconfig.org

root = true

[*]
charset = utf-8 
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,rst,ini}]
indent_style = space
indent_size = 4 

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2 

[*.{js,jsx,ts,tsx,vue,css,scss,sass}]
indent_style = space
indent_size = 2 
trim_trailing_whitespace = true
insert_final_newline = true
